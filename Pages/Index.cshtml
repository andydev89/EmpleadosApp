@page
@model EmpleadosApp.Pages.IndexModel

@{
    ViewData["Title"] = "Empleados";
}

<h1 class="mb-4">Empleados</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Nuevo Empleado
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Correo)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Area)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].FechaIngreso)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Activo)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Empleados)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Correo</td>
                <td>@item.Area</td>
                <td>@item.FechaIngreso.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.Activo)
                    {
                        <span class="badge bg-success"><i class="fa fa-check"></i> Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger"><i class="fa fa-times"></i> Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fa fa-eye"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>